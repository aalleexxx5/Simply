set a 0
clear
echo what's your name?
input in
echo you are an idiot, *in _ !
textstyle Broadway
textsize 20
run flash

wait 5000
window 20 40 1200 700
button tryk tre gange 500 0 200 80 knap1

subroutine flash
set ab 10
section a
wait 500
sub ab *ab 1
if *ab = 0 exit
if *a = 0 jumpto a1
if *a = 1 jumpto a2
exit
section a1
textcolor ff0000
set a 1
jumpto a

section a2
textcolor 0000ff
set a 0
jumpto a
endsubroutine

set knap1Tryk 0
subroutine knap1
add knap1Tryk *knap1Tryk 1
if *knap1Tryk = 3 jumpto færdig
exit
section færdig
popup jubiiiiiii error tillykke,/newlinedu er klog, *in _ !
window 600 200 1300 900
set knap1Tryk 0
endsubroutine
